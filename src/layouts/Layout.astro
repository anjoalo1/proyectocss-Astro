--- 
//import { AstroAssets } from 'astro:assets';
import Header from '../components/Header.astro';
import Imagecss from '../components/Imagecss.astro';
import Footer from '../components/Footer.astro';
import Navigation from '../components/Navigation.astro';

interface Props {
	title: string;	
}


const { title } = Astro.props;




---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="curso css" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script src="../scripts/myscript.js"></script>

		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
	</head>
	<body>
		<Header></Header>
		<div class="container-grid">
			
				
				<Imagecss></Imagecss>

				<div>
					<Navigation></Navigation>
				</div>

				
				<div class="container-main">
					<slot />
				</div>
			
		</div>

		<Footer></Footer>

	</body>
</html>



<style is:global>

	body{
		margin: 0;
		color: white;
	}

	.container-grid{
		min-width: 250px;
		max-width: 900px;
		margin: 0 auto;

	}
	


		
	html {
		/* font-family: system-ui, sans-serif; */
		font-family: 'Roboto', sans-serif;
		background: #3e414f;
		
		/* background-size: 224px; */
	}

	.title-h1{
		font-size: 4rem;
		margin: 0 auto;
		text-align: center;
		padding: 10px 0;
		overflow: auto;

	}

	.title-h2{
		font-size: 2.5rem;
		color: red;
	}

	.parrafo{
		font-size: 1.5rem;
	}

	.container-main{
		min-width: 300px;
		max-width: 900px;
		padding: 10px;
		margin: 0 auto;
	}

	.res{
		color: red;
		font-size: 1.5rem;
		transition: 0.3s;
		padding: 2px;
	}
	.res:hover{
		background-color: #0f5624;
		border-radius: 3px;

	}

	.listas{
		font-size: 1.5rem;
	}


	



</style>
